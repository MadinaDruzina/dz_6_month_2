<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/img"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/dobro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать!"
        android:textSize="34sp"
        android:layout_marginBottom="80dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vipolnite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/dobro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="      Выполните вход \n или зарегестрируйтесь"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/pochta"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@+id/vipolnite"
        android:hint="Введите вашу почту"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <EditText
        android:id="@+id/parol"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@+id/pochta"
        android:hint="Введие пароль"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/voiti"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:text="Войти"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@+id/parol"
        android:backgroundTint="#9C9797"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/zabil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Забыл пароль?"
        app:layout_constraintTop_toBottomOf="@+id/voiti"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="80dp"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/najmite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нажми сюда"
        app:layout_constraintTop_toBottomOf="@+id/voiti"
        app:layout_constraintStart_toEndOf="@id/zabil"
        android:layout_marginStart="20dp"
        android:textColor="#FFEB3B"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/vhod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вход"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="40dp"
        android:textColor="@color/white"
        android:textSize="32dp"/>








</androidx.constraintlayout.widget.ConstraintLayout>